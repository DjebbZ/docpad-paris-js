/* Eric Meyer's CSS Reset http//meyerweb.com/eric/tools/css/reset/ */

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}

// HTML5 display-role reset for older browsers
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section {
  display: block;
}
body {
  line-height: 1;
}
ol, ul {
  list-style: none;
}
blockquote, q {
  quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
  content: '';
  content: none;
}

table {
  border-collapse: collapse;
}

// Variables
// -------------------------

// Typography
baseFontSize = 20px
baseFontFamily = "Helvetica Neue", Helvetica, Arial, sans-serif
baseLineHeight = 23px

// Color
grayLight = #999
gray = rgb(215,215,215)

/* Mixins */

// Vendor mixin (very useful !)
vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args


// Basic styles
// -------------------------

body
  font-family baseFontFamily
  min-height 740px
  background-color gray

b, strong
  font-weight bold

i, em
  font-style italic

p
  margin 0 0 (baseLineHeight / 1.5)
  font-family baseFontFamily
  font-size baseFontSize
  line-height baseLineHeight

ul, ol
  padding 0
  margin 0 0 (baseLineHeight / 2) 35px

ul
  list-style disc

ol
  list-style decimal

li
  line-height baseLineHeight
  margin 0 0 (baseLineHeight / 1.5)

a
  color inherit
  text-decoration none
  padding 0 0.1em
  background rgba(255,255,255,0.5)
  text-shadow 1px 0 2px rgba(100,100,100,0.9)
  border-radius 0.2em
  vendor('transition', 0.5s)
  &:hover,
  &:focus
    background rgba(255,255,255,1)
    text-shadow 1px 0 2px rgba(100,100,100,0.5)

blockquote
  padding: 0 0 0 15px
  margin 0 0 18px
  border-left 5px solid #EEE
  p
    margin-bottom 0
    font-size 16px
    font-weight 300
    line-height baseFontSize * 1.1


/* Headings */

h1, h2
  text-rendering optimizelegibility // Fix the character spacing for headings

h1
  font-size baseFontSize * 2.5
  margin-bottom @font-size
  line-height baseLineHeight * 3
  letter-spacing -3px

h2
  font-size baseFontSize * 1.5
  margin-bottom @font-size
  line-height baseLineHeight * 2
  font-weight bold

h3
  font-size baseFontSize * 1.2
  line-height baseLineHeight * 1.5
  font-weight bold

/* Fallback message */

.fallback-message
  font-family sans-serif
  line-height 1.3
  width 780px
  padding 10px 10px 0
  margin 20px auto
  border 1px solid #E4C652
  border-radius 10px
  background #EEDC94

.fallback-message p
  margin-bottom 10px

.impress-supported .fallback-message
  display none

// Slides styles
// -------------------------

/* Common styles */

.step
  display block

  width 800px
  height 700px
  padding 40px 60px

  background-color white
  border 1px solid rgba(0, 0, 0, .3)
  border-radius 10px
  box-shadow 0 2px 6px rgba(0, 0, 0, .1)

  color rgb(102, 102, 102)
  text-shadow 0 2px 2px rgba(0, 0, 0, .1)

.impress-enabled .step
  margin 0
  opacity 0.2
  vendor('transition', opacity 1s)

.impress-enabled .step.active
  opacity 1

/* Slide specific */

#intro
  .slide-content
    margin-top 250px
  h1
    text-align center
  p
    text-align right
  p:first-child
    margin-top 250px

#not-enough
  text-align center
  .slide-content
    margin-top 250px

#generators-to-the-rescue
  text-align center
  .slide-content
    margin-top 250px
  strong
    font-size baseFontSize * 2
